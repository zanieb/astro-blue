---
/**
 * Custom SiteTitle component - PYX style
 * Shows logo + "Astro Blue" bold + "Documentation" in lighter gray
 * Like PYX shows logo + "PYX" bold + "Documentation" lighter
 */
import { logos } from 'virtual:starlight/user-images';
import config from 'virtual:starlight/user-config';

const { siteTitle, siteTitleHref } = Astro.locals.starlightRoute;
---

<a href={siteTitleHref} class="site-title">
  {config.logo && logos.dark && (
    <img
      src={logos.dark.src}
      width={logos.dark.width}
      height={logos.dark.height}
      alt={config.logo.alt || ''}
      class="site-logo"
    />
  )}
  <span class="title-wrapper">
    <span class="title-name">{siteTitle}</span>
    <span class="title-suffix">Documentation</span>
  </span>
</a>

<style>
  .site-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    line-height: 1;
  }

  .site-logo {
    width: 2rem;
    height: 2rem;
  }

  .title-wrapper {
    display: flex;
    align-items: baseline;
    gap: 0.375rem;
  }

  .title-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .title-suffix {
    font-size: 1.125rem;
    font-weight: 400;
    color: var(--theme-text-muted);
  }

  .site-title:hover .title-name {
    color: var(--sl-color-white);
  }

  .site-title:hover .title-suffix {
    color: var(--theme-text-muted);
  }
</style>
